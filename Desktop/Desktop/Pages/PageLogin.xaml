<Page x:Class="Desktop.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      xmlns:uc="clr-namespace:Desktop.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Page.Resources>
        <Storyboard x:Key="SlideLeftToRight">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="-50"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="SlideRightToLeft">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="50"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="FadeOut">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseIn"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Name="StackLoginRigth" HorizontalAlignment="Center" VerticalAlignment="Center"
                    RenderTransformOrigin="0.5,0.5" Opacity="1">
            <StackPanel.RenderTransform>
                <TranslateTransform X="0"/>
            </StackPanel.RenderTransform>
            <TextBlock FontSize="27" HorizontalAlignment="Center">Вход</TextBlock>
            <TextBlock Margin="0,5">Используйте логин и пароль</TextBlock>
            <uc:UserLogin x:Name="UserLoginControl"/>
        </StackPanel>

        <Border Name="StackLoginLeft" Background="Purple" Grid.Column="1" CornerRadius="80,0,0,80"
                RenderTransformOrigin="0.5,0.5" Opacity="1">
            <Border.RenderTransform>
                <TranslateTransform X="0"/>
            </Border.RenderTransform>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontSize="21" Foreground="White" HorizontalAlignment="Center">Привет, друг!</TextBlock>
                <TextBlock Foreground="White" TextWrapping="Wrap" TextAlignment="Center" Margin="10">Зарегистрируйтесь, чтобы получить доступ ко всем возможностям</TextBlock>
                <Button x:Name="BtnSignup" Click="BtnSignup_Click" Background="Transparent" 
                        BorderThickness="2" BorderBrush="White" Margin="0,10" Foreground="White" 
                        Padding="20,10" Cursor="Hand">
                    Регистрация
                </Button>
            </StackPanel>
        </Border>

        <Border Name="StackSignupRigth" Background="Purple" CornerRadius="0,80,80,0"
                RenderTransformOrigin="0.5,0.5" Opacity="0" Visibility="Collapsed">
            <Border.RenderTransform>
                <TranslateTransform X="0"/>
            </Border.RenderTransform>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontSize="21" Foreground="White" HorizontalAlignment="Center">С возвращением!</TextBlock>
                <TextBlock Foreground="White" TextWrapping="Wrap" TextAlignment="Center" Margin="10">Введите свои данные, чтобы использовать все возможности сайта</TextBlock>
                <Button x:Name="BtnLogin" Click="BtnLogin_Click" Background="Transparent" 
                        BorderThickness="2" BorderBrush="White" Margin="0,10" Foreground="White"
                        Padding="20,10" Cursor="Hand">
                    Вход
                </Button>
            </StackPanel>
        </Border>

        <StackPanel Name="StackSignupLeft" Grid.Column="1" HorizontalAlignment="Center"
                    VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" 
                    Opacity="0" Visibility="Collapsed">
            <StackPanel.RenderTransform>
                <TranslateTransform X="0"/>
            </StackPanel.RenderTransform>
            <TextBlock FontSize="27" HorizontalAlignment="Center">Регистрация</TextBlock>
            <TextBlock Margin="0,5">Используйте логин и почту для регистрации</TextBlock>
            <uc:UserSignup x:Name="UserSignupControl"/>
        </StackPanel>
    </Grid>
</Page>