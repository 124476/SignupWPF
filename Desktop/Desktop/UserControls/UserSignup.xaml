<UserControl x:Class="Desktop.UserControls.UserSignup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Desktop.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBox Style="{StaticResource PlaceholderTextBoxStyle}" Tag="Логин" Margin="0,5"></TextBox>
            <TextBox Style="{StaticResource PlaceholderTextBoxStyle}" Tag="Почта" Margin="0,5"></TextBox>
            <PasswordBox Style="{StaticResource PlaceholderPasswordStyle}" Tag="Пароль" Margin="0,5"></PasswordBox>
            <Button Style="{StaticResource ButtonStyle}">Регистрация</Button>
        </StackPanel>
    </Grid>
</UserControl>
